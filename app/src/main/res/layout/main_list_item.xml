<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_margin"
    android:background="@drawable/main_item_bg">

    <TextView
        android:id="@+id/tv_item_main_recipes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/main_list_large_margin"
        android:fontFamily="@font/permanent_marker"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/main_list_text_size" />

    <ImageView
        android:id="@+id/bracket_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/small_margin"
        android:paddingTop="@dimen/half_small_margin"
        android:src="@drawable/bracket_small"
        android:contentDescription="Bracket image" />

    <ImageView
        android:id="@+id/hat_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Decorating image of the main page list item"
        android:padding="@dimen/overall_padding"
        android:src="@drawable/image_hat" />

</RelativeLayout>